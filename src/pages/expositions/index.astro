---
import MainLayout from '#layouts/main-layout.astro'
import Link from 'astro-typesafe-routes/link'
import { getCollection } from 'astro:content'
const expositions = await getCollection('expositions')
---

<MainLayout>
	<h1 class="text-heading-1 font-bold text-default">Expositions</h1>
	<ul class="space-y-2">
		{
			expositions.map((el) => (
				<li>
					<Link to="/expositions/[slug]" params={{ slug: el.id }} class="text-body text-default underline hover:text-muted">
						{el.data.title}
					</Link>
				</li>
			))
		}
	</ul>
</MainLayout>
