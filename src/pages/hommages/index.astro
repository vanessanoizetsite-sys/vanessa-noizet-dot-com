---
import MainLayout from '#layouts/main-layout.astro'
import Link from 'astro-typesafe-routes/link'
import { getCollection } from 'astro:content'
const hommages = await getCollection('hommages')
---

<MainLayout>
	<h1 class="text-heading-1 font-bold text-default">Hommages</h1>
	<ul class="space-y-2">
		{
			hommages.map((el) => (
				<li>
					<Link to="/hommages/[slug]" params={{ slug: el.id }} class="text-body text-default underline hover:text-muted">
						{el.data.title}
					</Link>
				</li>
			))
		}
	</ul>
</MainLayout>
